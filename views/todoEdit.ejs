<!DOCTYPE html>
<head>
<title>Todo App</title>
<link href="/styles.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <h2>To-Do</h2>
    <form
        action="/addtask"
        method="POST"
      >
        <input
          class="inputBox"
          type="text"
          name="content"
          placeholder="add new task"
          disabled
        >
        <button 
          type="submit" 
          class="button add"
          disabled
        ><span class="fas fa-plus"></span> Add Task</button>
        <h2>Today Tasks</h2>
        <ul class="tasks-list">
            <% todoTasks.forEach(details => { %>
                <% if (details._id == idTask) { %>
                    <li class="list-item">
                        <form action="/edit/<%= details._id %>" method="POST">
                            <input
                                class="inputBox"
                                type="text"
                                name="content"
                                value="<%= details.content %>" 
                            />
                            <button class="button add" type="submit">Confirm</button>
                            <button class="button remove"><a href="/">Cancel</a></button>
                        </form>
                    </li>
                <% } else { %>
                    <li class="list-item">
                        <div class="todo-list-item-name"><%= details.content %></div>
                        <a href="/edit/<%= details._id %>" class="add"> <span class="fas fa-edit"></span></a>
                        <button
                            class="button remove"
                            type="submit"
                        >
                            <a href="/remove/<%= details._id %>" class="edit"><span class="fas fa-times"></span> Remove</a>
                        </button>
                        
                    </li>
                <% } %>
            <% }) %>
        </ul>
    </div>
</body>